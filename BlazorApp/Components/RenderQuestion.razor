@using Shared.Models;

<div>
    <Row Gutter="8" Style="margin-bottom: 12px;">
        <Col Span="24">
        <p style="font-weight: bold;">@questionOptionView.Content</p>
        </Col>
    </Row>

    @if (!string.IsNullOrEmpty(questionOptionView.ImageUrl))
    {
        <Row Gutter="8" Style="margin-bottom: 12px;">
            <AntDesign.Col Span="24">
                <Image Src="@questionOptionView.ImageUrl"
                       Style="max-width: 100%; border: 1px solid #eee; padding: 4px;" />
            </AntDesign.Col>
        </Row>
    }

    <Row Gutter="8" Style="margin-bottom: 16px;">
        <Col Span="24">
        <RadioGroup TValue="Option"
                    Value="selectedOption"
                    Disabled="isSubmitted"

                    Direction="Direction.Vertical"
                    Style="display: flex; flex-direction: column; gap: 8px;">
                @foreach (var option in questionOptionView.Options)
                {
                <Radio TValue="Option" Checked="option.Id == selectedOption?.Id" Value="option">
                    <span>@option.Content</span>
                </Radio>
                }
        </RadioGroup>
        </Col>
    </Row>
</div>

